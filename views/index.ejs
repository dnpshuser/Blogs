<%- include("./successMessages") %> 
<%- include('./infoMessages') %>

<div class="blog-container" >
  <% for(blog of locals.blogs) { %>
    <div>
      Title : <strong><%= blog.title %></strong>
      <br> 
      Category : <%= blog.category %> 
      <br>
      <img width="100%" height="500px"  src="/images/<%=blog.image%>" alt="blog ka photo">
      <br>
      <%- locals.truncateText(blog.description,250) %>
      <br>
      <br>
      Contributed by : <strong><%= blog.author %></strong> 
    </div>
        <a href="/show/<%=blog._id%>" class="btn btn-info">Read More</a>
    <br>
    <hr>

  <% } %> 
</div>

