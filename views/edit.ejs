<div class="form-container">
  <form action="/edit/<%=blog._id%>/?_method=PUT" method="POST" enctype="multipart/form-data" >
    <div class="form-inline">
      <label for="title">Title : <pre>         </pre></label>
      <input type="text" name="title" id="title" class="form-control" required value=<%=blog.title%> >
    </div>
    <div class="form-inline">
      <label for="category">Category : <pre>     </pre></label>
      <select name="category" id="category">
        <% for(category of locals.categories) { %>
          <option <% if (category.name == blog.category) { %>
            selected
          <% } %>  ><%= category.name %></option>     
        <% } %> 
      </select>
    </div>
    <img width="100%" height="500px"  src="/images/<%=blog.image%>" alt="blog ka photo">
    <div class="form-inline">
      <label for="image">Change Blog profile : <pre>       </pre></label>
      <input  type="file" name="image" id="image">
    </div>
    <div class="form-inline">
      <label for="description">Description :<pre>  </pre></label>
      <textarea class="form-control" name="description" id="description" placeholder="Describe your blog" ><%= blog.description %>  </textarea>
    </div>
    
    <button type="submit" class="btn btn-primary">Save My Edits</button>
    <br>
    <hr>
  </form>
  <form action="/edit/<%=blog._id%>/?_method=DELETE" method="POST" >
    <input type="checkbox" id="checkDelete" name="checkDelete" required>
    <label for="checkDelete">I want to delete this blog</label>
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
</div>

<script  src="/ckeditor/ckeditor.js"></script>
<script  type="text/javascript"> CKEDITOR.replace( "description");</script>